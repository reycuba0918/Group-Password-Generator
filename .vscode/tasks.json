{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "@${fileWorkspaceFolder}\\.vscode\\c.txt",
                "@${fileWorkspaceFolder}\\.vscode\\h.txt",
                "-o",
                "${fileWorkspaceFolder}\\passgenerator.exe",
                "-pthread",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOrder": "parallel",
            "dependsOn":["find all C files", "find all the directories of all h files"]
        },
        {
            "label": "find all C files",
            "type": "shell",
            "command": "(Get-ChildItem -Recurse -Filter '*.c' | ForEach-Object {'\\\"' + $_ + '\\\"' -replace '\\\\', '\\\\'}) > .vscode\\c.txt"
        },
        {
            "label": "find all the directories of all h files",
            "type": "shell",
            "command": "(Get-ChildItem -Recurse -Filter '*.h' | Select-Object -ExpandProperty DirectoryName | ForEach-Object { '-I\\\"' + $_ + '\\\"' -replace '\\\\', '\\\\' }) > .vscode\\h.txt"
        }
    ],
    "version": "2.0.0"
}